<%- include('include/_header')%>



<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
             <a href="/"> <i class="uil uil-angle-double-left"></i> All User</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update Contact</h2>
            <span class="text-secondary">Use The below form to update the Contact</span>
        </div>

       
        <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-secondary">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
          <label for="name" class="text-secondary">Email</label>

          <input type="text" name="email"  value="<%= user.email%>" placeholder="Please Enter Email">
      </div>
      
      <div class="form-group form-check-inline">
          <label for="name" class="text-secondary">Gender:  </label>
          <div class="radio inline">
              <input type="radio" class="" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
              <label for="gender" class="text-secondary form-check-input">   Male</label>
          </div>
          <div class="radio inline">
              <input type="radio" name="gender"value="Female"  <%= user.gender == 'Female' ? 'checked' : '' %> >
              <label for="gender" class="text-secondary">Female</label>
          </div>
          <div class="radio inline">
              <input type="radio" name="gender" value="Others"  <%= user.gender == 'Others' ? 'checked' : '' %> >
              <label for="gender" class="text-secondary">Others</label>
          </div>

         
      
      </div>
      <div class="form-group">
          <label for="name" class="text-secondary">Phone</label>
         
          <input type="text" name="phone"  value="<%= user.phone %>" placeholder="Please Enter Phone Number">
      </div>
      <div class="form-group">
          <label for="name" class="text-secondary">Company</label>
         
          <input type="text" name="company"  value="<%= user.company %>" placeholder="Please Enter Company Name">
      </div>
      <div class="form-group">
          <label for="name" class="text-secondary">Birthday</label>
         
          <input type="text" name="birthday"  value="<%= user.birthday %>" placeholder="DD/MM/YYYY">
      </div>
    </div>

    <div class="from-group">
        <button type="submit" class="btn1 btn-dark btn-lg sub">Submit</button>
    </div>
</form>
        
    </div>
</main>




<%- include('include/_footer')%>