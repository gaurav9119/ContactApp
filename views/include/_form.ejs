 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-secondary">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Please Enter Full Name">
        </div>
        <div class="form-group">
          <label for="name" class="text-secondary">Email</label>

          <input type="text" name="email" value="" placeholder="Please Enter Email">
      </div>
      
      <div class="form-group form-check-inline">
          <label for="name" class="text-secondary">Gender:  </label>
          <div class="radio inline">
              <input type="radio" class="" name="gender" value="Male">
              <label for="gender" class="text-secondary form-check-input">   Male</label>
          </div>
          <div class="radio inline">
              <input type="radio" name="gender" value="Female">
              <label for="gender" class="text-secondary">Female</label>
          </div>
          <div class="radio inline">
              <input type="radio" name="gender" value="Others">
              <label for="gender" class="text-secondary">Others</label>
          </div>

         
      
      </div>
      <div class="form-group">
          <label for="name" class="text-secondary">Phone</label>
         
          <input type="text" name="phone" value="" placeholder="Please Enter Phone Number">
      </div>
      <div class="form-group">
          <label for="name" class="text-secondary">Company</label>
         
          <input type="text" name="company" value="" placeholder="Please Enter Company Name">
      </div>
      <div class="form-group">
          <label for="name" class="text-secondary">Birthday</label>
         
          <input type="text" name="birthday" value="" placeholder="DD/MM/YYYY">
      </div>
    </div>

    <div class="from-group">
        <button type="submit" class="btn1 btn-dark btn-lg sub">Submit</button>
    </div>
</form>